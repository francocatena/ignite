<table class="table table-striped">
  <caption>
    <h3><%= @lesson %></h3>
  </caption>

  <thead>
    <tr>
      <th><%= Slide.human_attribute_name 'title' %></th>
      <th><%= Slide.human_attribute_name 'number' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.title %></td>
        <td><%= slide.number %></td>
        <td><%= link_to_show course_lesson_path(@lesson.course, @lesson, anchor: slide.anchor) %></td>
        <td><%= link_to_edit edit_lesson_slide_path(@lesson, slide) %></td>
        <td><%= link_to_destroy lesson_slide_path(@lesson, slide) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination_links(@slides) %>

<nav class="form-actions">
<%= link_to t('view.slides.new'), new_lesson_slide_path(@lesson), class: 'btn btn-primary' %>
</nav>
