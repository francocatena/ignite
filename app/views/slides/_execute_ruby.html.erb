<div class="code-form" style="display: none;">
  <div class="row-fluid">
    <div class="span12">
      <%= simple_form_for :code_node, url: execute_ruby_path(format: :html), html: { class: 'ruby-code' }, remote: true do |f| %>
        <div class="field">
          <%= f.text_area :code, value: node.content, id: "code_#{node.id}", class: 'span12', rows: 10 %>
        </div>
        
        <div class="actions">
          <%= f.button :submit, t('view.slides.execute'), class: 'avoid-disable' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
