<div class="slide">
  <header>
    <h1><%= @slide.title %></h1>
    <p class="number"><%= @slide.number %></p>
  </header>
  
  <div class="content">
    <% @slide.all_nodes.each do |node| %>
      <%= node.draw %>
    <% end %>

    <nav class="links">
      <%= link_to t(:'label.edit'), edit_slide_path(@slide) %> |
      <%= link_to t(:'label.list'), slides_path %>
    </nav>
  </div>
</div>