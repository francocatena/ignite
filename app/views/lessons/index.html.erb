<table class="list">
  <caption><%= t('view.lessons.course', course: @course.to_s) %></caption>
  <thead>
    <tr>
      <th><%= Lesson.human_attribute_name 'name' %></th>
      <th><%= Lesson.human_attribute_name 'sequence' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.name, lesson_slides_path(lesson),
          title: t('view.lessons.show_slides') %></td>
        <td><%= lesson.sequence %></td>
        <td><%= link_to t('label.show'), [@course, lesson] %></td>
        <td><%= link_to t('label.edit'),
          edit_course_lesson_path(@course, lesson) %></td>
        <td><%= link_to t('label.delete'), [@course, lesson],
          confirm: t('messages.confirmation'), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<nav class="links">
  <%= pagination_links(@lessons) %>
  <%= link_to t('view.lessons.new'), new_course_lesson_path(@course) %>
</nav>