<div id="unexpected_error" style="margin-bottom: 1em;">
  <div id="error_header">
    <h1><%= t('errors.header_message') %></h1>
  </div>

  <div id="error_body">
    <p><%= t('errors.apologies_for_the_inconvenience') %></p>
  </div>
</div>

<% unless Rails.env.production? %>
  <div id="error_details">
    <div>
      <h2 style="margin: 1em 0em;"><%= error.message %></h2>
      <h3>Backtrace:</h3>
      <pre style="margin-top: .5em;"><%= error.backtrace.join("\n") %></pre>

      <% unless params.empty? %>
      <h3 style="margin-top: 1em;">Parameters:</h3>
      <pre style="margin-top: .5em;"><%= params.inspect %></pre>
      <% end %>
      <div style="clear: both;"></div>
    </div>
  </div>
<% end %>