<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Image.human_attribute_name 'name' %></th>
      <th><%= Image.human_attribute_name 'caption' %></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= link_to image.name, image %></td>
        <td><%= image.caption %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= pagination_links @images %>

<nav class="form-actions">
  <%= link_to t('view.images.new'), new_image_path, class: 'btn btn-primary' %>
</nav>